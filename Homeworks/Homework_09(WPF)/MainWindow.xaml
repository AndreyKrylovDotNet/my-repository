<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Homework_09_WPF_"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="av"
        x:Class="Homework_09_WPF_.MainWindow"

        Title="UsefulApp" 
        Height="610" Width="987" 
        MaxHeight="610" MaxWidth="987"
        MinHeight="89" MinWidth="144" 
        Cursor="">
    <Grid Background="Gainsboro">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="55*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="ListBox" 
                 HorizontalAlignment="Center" 
                 Margin="0,40,0,40" 
                 Grid.RowSpan="3" 
                 Width="298" 
                 av:ItemsSource="{av:SampleData ItemCount=12}" 
                 FontSize="25" 
                 ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" 
                 BorderThickness="2,2,1,1"/>

        <TextBox x:Name="TextBoxTxt" 
                 TextAlignment="Left"
                 Grid.Column="1" 
                 TextWrapping="Wrap" 
                 Margin="40,40,40,5" 
                 FontSize="25" 
                 VerticalScrollBarVisibility="Visible"/>

        <Label x:Name="Label"
               Content="Label"
               Grid.Column="1" Grid.Row="2"
               Margin="40,5,40,40"
               FontSize="15" FontWeight="SemiBold"
               Foreground="#FF989191"/>
            <TextBlock x:Name="TextBlockInLabel"
                       TextWrapping="Wrap"
                       Grid.Column="1" Grid.Row="2"
                       Margin="40,5,40,40"
                       FontSize="25" FontWeight="SemiBold"
                       Foreground="#FF989191">
            </TextBlock>
        <Label/>

        <RadioButton x:Name="RadioBttn1" 
                     Grid.Column="1" Grid.Row="1"  
                     Content="Вывод каждого слова в отдельной строке в ListBox" 
                     Margin="40,0,0,30" 
                     HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                     FontSize="13" FontWeight="Medium" 
                     BorderThickness="2,2,2,2"/> 
        
        <RadioButton x:Name="RadioBttn2" 
                     Grid.Column="1" Grid.Row="1" 
                     Content="Перестановка слов в обратном порядке в предложении" 
                     Margin="40,30,0,0" 
                     HorizontalAlignment="Left" VerticalAlignment="Top" 
                     FontSize="13" FontWeight="Medium" 
                     BorderThickness="2,2,2,2"/> 
        
        <TextBlock HorizontalAlignment="Left"
                   Margin="40,15,0,0" 
                   Text="ListBox" 
                   VerticalAlignment="Top" 
                   FontSize="15" FontWeight="Medium" 
                   Foreground="#FF989191"/>
        
        <TextBlock Grid.Column="1" 
                   HorizontalAlignment="Left" 
                   Margin="40,15,0,0" 
                   Text="TextBox" 
                   VerticalAlignment="Top" 
                   FontSize="15" FontWeight="Medium" 
                   Foreground="#FF989191"/>
        
        <Button Grid.Column="1" 
                Content="Run" 
                Margin="477,0,40,0" 
                Grid.Row="1" 
                VerticalAlignment="Center" 
                Width="90" Height="30" 
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                FontSize="20" FontWeight="Medium" 
                Click="Button_Click" 
                BorderThickness="1,1,2,2">
            
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA0A0A0" Offset="1"/>
                    <GradientStop Color="White" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
    
